using JunBatchCodeFirstApproachImpl.Data;
using JunBatchCodeFirstApproachImpl.Models;
using Microsoft.AspNetCore.Mvc;

namespace JunBatchCodeFirstApproachImpl.Controllers
{
    public class TestController : Controller
    {
        ApplicationDbContext db;
        public TestController(ApplicationDbContext db)
        {
            this.db = db;
        }

    public IActionResult TestDb()
    {
        try
        {
            var data = db.emps.FirstOrDefault();
            return Content("Database Connected Successfully");
        }
        catch (Exception ex)
        {
            return Content("Error: " + ex.Message);
        }
    }
}
