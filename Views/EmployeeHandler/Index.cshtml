<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" id="modalbtn">
    Add Emp
</button>


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Salary</th>
            <th scope="col">Manager</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    <tbody id="empdata">
        
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="empdets">
                    <div class="form-group" id="id_div">
                        <label for="exampleInputEmail1">ID</label>
                        <input type="text" name="eid" class="form-control" id="eid" aria-describedby="emailHelp" placeholder="Enter email">
                     
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" name="ename" class="form-control" id="ename" aria-describedby="emailHelp" placeholder="Enter email">

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="text" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                     
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Salary</label>
                        <input type="text" name="esalary" class="form-control" id="esalary" aria-describedby="emailHelp" placeholder="Enter email">

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Managers</label>
                        <select class="form-control" name="ManagerId" id="ManagerId" asp-items="@ViewBag.managers">
                            
                        </select>

                    </div>
                 </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="savebtn">Save</button>
                <button type="button" class="btn btn-primary" id="updbtn">Update</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/emps.js"></script>